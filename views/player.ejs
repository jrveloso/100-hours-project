<%- include('partials/header') -%>
<div class="container px-5">
  <div class="flex justify-between mt-2">
    <a class="btn btn-primary" href="/feed">Return to Feed</a>
    <a class="btn btn-primary" href="/profile/<%= user.id %>">Return to Profile</a>
</div>
  
  <div class="card card-side bg-base-100 shadow-xl">
    <figure><img src="https://ak-static.cms.nba.com/wp-content/uploads/headshots/nba/latest/260x190/<%= picId %>.png" alt="headshot"/></figure>
    <div class="card-body">
      <h2 class="card-title"><%= player.full_name %></h2>
      <span><%= player.team.alias %></span>
      <span><%= player.position %></span>
      <span><%= player.height %> in</span>
      <span><%= player.weight %> lbs</span>
      <span><%= player.draft.year %> Draft</span>
      <div class="card-actions justify-start">
        <form action="/player/<%= player.id %>" method="POST">
          <button type="submit" 
                  class="btn btn-primary" 
                  >
            Add Player
          </button>
      </form>
      </div>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="table table-zebra w-full">
      <!-- head -->
      <thead>
        <tr>
          <th><%= player.seasons[0].type %></th>
          <th>MIN</th>
          <th>PTS</th>
          <th>FGM</th>
          <th>FGA</th>
          <th>FG%</th>
          <th>3PM</th>
          <th>3PA</th>
          <th>3P%</th>
          <th>FTM</th>
          <th>FTA</th>
          <th>FT%</th>
          <th>OREB</th>
          <th>DREB</th>
          <th>REB</th>
          <th>AST</th>
          <th>TOV</th>
          <th>STL</th>
          <th>BLK</th>
          <th>PF</th>
        </tr>
      </thead>
      <tbody>
        <!-- row 1 -->
        <% for(var i=0; i<player.seasons.length; i++) {%>
          <tr>
            <th><%= player.seasons[i].year %></th>
            <td><%= player.seasons[i].teams[0].average.minutes.toFixed(1) %></td>
            <td><%= player.seasons[i].teams[0].average.points.toFixed(1) %></td>
            <td><%= player.seasons[i].teams[0].average.field_goals_made.toFixed(1) %></td>
            <td><%= player.seasons[i].teams[0].average.field_goals_att.toFixed(1) %></td>
            <td><%= (player.seasons[i].teams[0].average.field_goals_made / player.seasons[i].teams[0].average.field_goals_att).toFixed(1) * 100 %></td>
            <td><%= player.seasons[i].teams[0].average.three_points_made.toFixed(1) %></td>
            <td><%= player.seasons[i].teams[0].average.three_points_att.toFixed(1) %></td>
            <td><%= (player.seasons[i].teams[0].average.three_points_made / player.seasons[i].teams[0].average.three_points_att).toFixed(1) * 100 %></td>
            <td><%= player.seasons[i].teams[0].average.free_throws_made.toFixed(1) %></td>
            <td><%= player.seasons[i].teams[0].average.free_throws_att.toFixed(1) %></td>
            <td><%= (player.seasons[i].teams[0].average.free_throws_made / player.seasons[i].teams[0].average.free_throws_att).toFixed(1) * 100 %></td>
            <td><%= player.seasons[i].teams[0].average.off_rebounds.toFixed(1) %></td>
            <td><%= player.seasons[i].teams[0].average.def_rebounds.toFixed(1) %></td>
            <td><%= player.seasons[i].teams[0].average.rebounds.toFixed(1) %></td>
            <td><%= player.seasons[i].teams[0].average.assists.toFixed(1) %></td>
            <td><%= player.seasons[i].teams[0].average.turnovers.toFixed(1) %></td>
            <td><%= player.seasons[i].teams[0].average.steals.toFixed(1) %></td>
            <td><%= player.seasons[i].teams[0].average.blocks.toFixed(1) %></td>
            <td><%= player.seasons[i].teams[0].average.personal_fouls.toFixed(1) %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/footer') -%>