<%- include('partials/header') -%>
<div class="grid md:grid-cols-3 grid-cols-1 gap-5 px-3 md:px-20 pb-5">
    <%- include('partials/sidenav') -%>
    <div class="card lg:card-side bg-white shadow-xl mt-3">
      <div class="card-body">
        <h1 class="card-title">Edit Profile</h1>
          <% if (paramsID == user.id) { %>
          <div class="mt-3">
            <form id="update" action="/settings/<%= user.id %>?_method=PUT" enctype="multipart/form-data" method="POST">
              <div class="form-control">
                  <label for="imgUpload" class="form-label">Upload a Profile Picture</label>
                  <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" 
                  class="bg-amber-500 b-transparent px-5 pt-3 pb-3 rounded-box w-fit shadow-md hover:bg-amber-600 font-medium text-lg  mt-3" 
                  value="Upload">upload photo
              </button>
            </form>
          </div>
          <div class="mt-5 w-full">
            <form id="update" action="/settings/bio/<%= user.id %>?_method=PUT" enctype="multipart/form-data" method="POST">
              <div class="form-control mt-5">
                  <label class="label">
                    <span class="form-label">Bio</span>
                  </label>
                  <input type="bio" placeholder="bio" class="input input-bordered form-control" id="exampleBio" aria-describedby="bioHelp" name="bio"/>
              </div>
              <button type="submit" 
                  class="bg-amber-500 b-transparent px-5 pt-3 pb-3 rounded-box w-fit shadow-md hover:bg-amber-600 font-medium text-lg  mt-3" 
                  value="Upload">update bio
              </button>
            </form>
          </div>
          <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') -%>