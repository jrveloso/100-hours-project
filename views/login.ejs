<%- include('partials/login-header') -%>

<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <div class="text-center lg:text-left">
      <h1 class="text-5xl font-bold">Tis the season</h1>
      <p class="py-6">The '22-23 NBA season is upon us. Track hoop stats and start hoop chats on Playbook.</p>
    </div>
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
        <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %> <% } %> <% if (locals.messages.info) { %> <%
        messages.info.forEach( el => { %>
        <div class="alert alert-info"><%= el.msg %></div>
        <% }) %> <% } %>
        <form action="/login" method="POST">
          <div class="form-control">
            <label class="label">
              <span class="label-text">Email</span>
            </label>
            <input type="text" 
                   placeholder="email" 
                   class="input input-bordered form-control"
                   id="exampleInputEmail1"
                   aria-describedby="emailHelp"
                   name="email" />
          </div>
          <div class="form-control">
            <label class="label">
              <span class="label-text">Password</span>
            </label>
            <input type="password" 
                   placeholder="password"
                   class="input input-bordered form-control"
                   id="exampleInputPassword1" 
                   name="password" />
            <label class="label">
              <a href="/signup" class="label-text-alt link link-hover">Create an account</a>
            </label>
          </div>
          <div class="form-control mt-6">
            <button type="submit" class="btn btn-primary bg-indigo-500">Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
