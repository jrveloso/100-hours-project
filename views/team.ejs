<%- include('partials/header') -%>
<div class="flex justify-between mt-2">
    <a class="btn btn-primary" href="/profile/<%= user.id %>">Return to Profile</a>
    <h1 class="font-bold text-3xl"><%= team.market %> <%= team.name %> Roster</h1>
    <a class="btn btn-primary" href="/feed">Return to Feed</a>
</div>
<div class="flex justify-center w-75">
  <div class="overflow-x-auto col-span-2">
    <table class="table w-full">
      <!-- head -->
      <thead>
        <tr>
          <th>Player No.</th>
          <th>Name</th>
          <th>Primary Position</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<team.players.length; i++) {%>
        <!-- row 1 -->
        <tr class="hover">
          <th><%= team.players[i].jersey_number %></th>
          <td>
            <form action="/player/<%= team.players[i].id %>" method="GET">
              <button class="link link-hover" type="submit">
                <%= team.players[i].full_name %>
              </button>
            </form>
          </td>
          <td><%= team.players[i].primary_position %></td>
          <td><%= team.players[i].status %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/footer') -%>