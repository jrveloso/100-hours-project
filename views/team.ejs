<%- include('partials/header') -%>
<div class="flex justify-between mt-2">
    <a class="btn btn-primary" href="/profile/<%= user.id %>">Return to Profile</a>
    <h1 class="font-bold text-3xl"> <%= team.fullName %> Roster</h1>
    <a class="btn btn-primary" href="/feed">Return to Feed</a>
</div>
<div class="flex justify-center w-75">
  <div class="overflow-x-auto col-span-2">
    <table class="table w-full">
      <!-- head -->
      <thead>
        <tr>
          <th>Player No.</th>
          <th>Name</th>
          <th>Primary Position</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<players.length; i++) {%>
        <!-- row 1 -->
        <tr class="hover">
          <th><%= players[i].jersey %></th>
          <td>
            <form action="/player/<%= players[i].personId %>" method="GET">
              <button class="link link-hover" type="submit">
                <%= players[i].firstName %> <%= players[i].lastName %>
              </button>
            </form>
          </td>
          <td><%= players[i].pos %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/footer') -%>