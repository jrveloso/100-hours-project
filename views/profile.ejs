<%- include('partials/header') -%>
<div class="grid md:grid-cols-3 grid-cols-1 gap-8 px-20 mt-8 pb-5">
  
  <div class="flex flex-col gap-4">
    <div class="card w-100 bg-base-100 shadow-xl justify-self-center">
      <figure class="px-10 pt-10">
        <img src="<%= user.image %>" alt="Shoes" class="rounded-xl" />
      </figure>
      <div class="card-body items-center text-center">
        <h2 class="card-title"><%= user.userName %></h2>
      </div>
    </div>
  </div>

  <div class="flex flex-grow h-fit card bg-white rounded-box gap-3 p-5">
    <div class="grid h-fit card bg-white rounded-box px-5 pt-5 pb-5">
    <% if (paramsID == user.id) { %>
        <form action="/post/createPost" enctype="multipart/form-data" method="POST" class="flex flex-col">
          <textarea class="form-control mb-5 w-100 px-2 h-40" id="text" name="text" placeholder="What are you thinking?"></textarea>
          <div>
            <button type="submit" class="btn btn-primary bg-indigo-500 font-bold" value="Upload">Post</button>
          </div>
        </form>
      <% } %>
    </div>
    <div class="grid h-fit card bg-amber-500 rounded-box place-items-center">
      <div class="flex flex-col mb-5">
        <h2 class="font-bold text-2xl mt-5"><%= user.userName %>'s Posts</h2>
        <ul>
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="border-b-2 border-black flex flex-col gap-1 mt-3">
              <a href="/post/<%= posts[i]._id%>" class="text-xl"><%= posts[i].text%></a>
              <span><%= posts[i].createdAt.toDateString()%></span>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>

  <div class="grid flex-grow h-fit card bg-white rounded-box p-5">
    <h3 class="justify-self-center text-2xl font-bold">Find Stats</h3>
    <ul class="mt-3 mb-5">
      <!-- Sidebar content here -->
      <div class="flex flex-col w-full lg:flex-row gap-2">
        <div class="grid flex-grow card bg-amber-400 rounded-box place-items-center pt-2 pb-2">
          <h2 class="mb-3 font-bold text-2xl">East</h2>
          <% for(var i=0; i<eastTeams.length; i++) {%>
            <li>
              <a href="/team/<%= eastTeams[i].urlName %>"><%= eastTeams[i].nickname %></a>
            </li>
          <% } %>
        </div> 
        <div class="grid flex-grow card bg-amber-600 rounded-box place-items-center pt-2 pb-2">
          <h2 class="mb-5 font-bold text-2xl">West</h2>
          <% for(var i=0; i<westTeams.length; i++) {%>
            <li>
              <a href="/team/<%= westTeams[i].urlName %>">
                  <%= westTeams[i].nickname %>
              </a>
            </li>
          <% } %>
        </div>
      </div>
    </ul>
    <div class="grid h-fit card bg-amber-500 rounded-box place-items-center">
      <h2 class="mt-5 mb-5 font-bold text-2xl"><%= user.userName %>'s Watchlist</h2>
      <ul class="mb-5">
        <% for(var i=0; i<players.length; i++) {%>
          <li>
            <a href="/player/<%= players[i].playerId %>">
              <span>
                <%= players[i].playerName %>
              </span>
            </a>
            <span>
                <%= players[i].playerPosition %>
            </span>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
        <!-- <div class="divider lg:divider-horizontal"> </div> -->

      <!-- <div>
        <a class="btn btn-primary" href="/feed">Return to Feed</a>
      </div> -->

</div>
<%- include('partials/footer') -%>