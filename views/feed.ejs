<%- include('partials/header') -%>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-5 px-5">
    <div class="hidden md:grid h-fit card bg-amber-500 rounded-box place-items-center mt-3">
      <h2 class="mt-5 mb-5 font-bold text-2xl"><%= user.userName %>'s Watchlist</h2>
      <ul class="mb-5">
        <% for(var i=0; i<players.length; i++) {%>
          <li>
            <a href="/player/<%= players[i].playerId %>">
              <span>
                <%= players[i].playerName %>
              </span>
            </a>
            <span>
                <%= players[i].playerPosition %>
            </span>
          </li>
        <% } %>
      </ul>
    </div>
  
    <div class="container border-l-2 border-r-2 border-black">
      <div class="place-items-center mt-5 px-5">
        <form class="flex flex-col" action="/post/createPost" enctype="multipart/form-data" method="POST">
          <textarea class="form-control mb-5 w-100 p-2" id="text" name="text" placeholder="What are you thinking?"></textarea>
          <button type="submit" class="btn btn-primary bg-white mb-10 w-fit" value="Upload">Post</button>
        </form>
      </div>
      <ul class="flex-col h-fit">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="flex mb-4 border-b-2 px-5 pb-2 border-black">
            <a class="" href="/post/<%= posts[i]._id%>">
            <% users.forEach(el => { %>
              <% if (String(el._id) == posts[i].userId) { %>
                <h1 class="font-bold">
                  <%= el.userName %>  
                </h1>
              <% } %>
            <% }) %>
              <p>
                <%= posts[i].text%>
              </p>
              <p class="text-sm">
                <%= posts[i].createdAt.toLocaleTimeString()%> <%= posts[i].createdAt.toDateString()%>
              </p>
            </a>
          </li>
        <% } %>
        </ul>
    </div>

    <div class="hidden md:grid flex-grow h-fit card bg-white rounded-box p-5 mt-3 md:visible">
      <h3 class="justify-self-center text-2xl font-bold">Find Stats</h3>
      <ul class="mt-3 mb-5">
        <!-- Sidebar content here -->
        <div class="flex flex-col w-full lg:flex-row gap-2">
          <div class="grid flex-grow card bg-amber-400 rounded-box place-items-center pt-2 pb-2">
            <h2 class="mb-3 font-bold text-2xl">East</h2>
            <% for(var i=0; i<eastTeams.length; i++) {%>
              <li>
                <a href="/team/<%= eastTeams[i].id %>"><%= eastTeams[i].name %></a>
              </li>
            <% } %>
          </div> 
          <div class="grid flex-grow card bg-amber-600 rounded-box place-items-center pt-2 pb-2">
            <h2 class="mb-5 font-bold text-2xl">West</h2>
            <% for(var i=0; i<westTeams.length; i++) {%>
              <li>
                <a href="/team/<%= westTeams[i].id %>">
                    <%= westTeams[i].name %>
                </a>
              </li>
            <% } %>
          </div>
        </div>
      </ul>
  </div>  
<%- include('partials/footer') -%>