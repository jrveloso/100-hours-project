    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body>  
    <div class="navbar bg-orange-300 border-b-2 justify-between">
      <div class="hidden md:flex">
        <a class="btn btn-ghost normal-case text-xl" href="/feed">playbook</a>
      </div>
      <div class="flex-none gap-2 w-full sm:w-fit justify-between">
        <div class="form-control mx-2">
          <form action="/player/searchPlayer" method="GET">
            <input type="search" id="player" name="player" placeholder="Player..." class="input input-bordered">
            <button type="submit">Search</button>
          </form>
        </div>
        <div class="dropdown dropdown-end">
